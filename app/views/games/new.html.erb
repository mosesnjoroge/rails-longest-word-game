<div>
  <div>
    <h1> New Game</h1>
  </div>

  <div>
    <%# need a letter generator based on the cards %>
    <% @letters.each do |item|  %>
      <h5 class="card-title"><%= item %></h5>
    <% end %>
  </div>
  <div>
    <p> What is the longest word you can find?</p>
    <div class="container-fluid">
      <form action="/games/score" method = "post" class="d-flex" role="search">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag "letter_array", @letters%>
        <input class="form-control me-2" type="search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Play</button>
      </form>
    </div>

  </div>

</div>
